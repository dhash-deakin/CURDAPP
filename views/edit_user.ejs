<%- include('layout/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>Edit User </h1>
      <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputName">Name</label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="inputName"
              placeholder="Enter Full Name"
              required
              value="<%= user.name %>"
              autocomplete="name" 
            />
          </div>
          <div class="form-group col-md-6">
            <label for="inputEmail">Email</label>
            <input
              type="email"
              class="form-control"
              id="inputEmail"
              name="email"
              placeholder="Enter Email"
              required
              value="<%= user.email %>"
              autocomplete="email" 
            />
          </div>
        </div>
        <div class="form-group">
          <label for="inputPhone">Phone</label>
          <input
            type="tel"
            class="form-control"
            id="inputPhone"
            name="phone"
            placeholder="+61 123345 234"
            required
            value="<%= user.phone %>"
            autocomplete="tel" 
          />
        </div>     
        
        <div class="form-group">
          <label for="inputImage">Select Image</label>
          <input type="file" class="form-control" name="image" id="inputImage" />
        </div>
        <img src="/<%=user.image %>" width="100" class="img-thumbnail mt-1"/>
        <input type="hidden" name="old_image" value="<%=user.image %>"/>
        <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg">
      </form>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
