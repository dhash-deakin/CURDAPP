<div class="container">
    <div class="row my-4">
      <div class="col-lg-12">
        <!--User succesfully added notification-->
        <% if (message) { %>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
          <button class="btn-close" type="button" data-bs-dismss="alert" aria-label="Close"></button>
          <strong>
            <%=message.message %>
          </strong>
        </div>
        <% } %>
  
        <div class="table-responsive">
          <% const number = -1; // You can change this value as needed %>
        
          <table class="table table-striped text-center">
            <thead>
              <tr class="table-dark">
                <th>ID</th>
                <th>Images</th>
                <th>Name</th>
                <th>E-Mail</th>
                <th>Phone</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (users.length > 0) { %>
              <% users.forEach((row, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><img src="<%=row.image %>" width="50" class="img-thumbnail" /></td>
                <td><%= row.name %></td>
                <td><%= row.email %></td>
                <td><%= row.phone %></td>
                <td>
                  <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                  <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } else { %>
          <h1>No data</h1>
          <% } %>
        </div>
        
  
      </div>
    </div>
  </div>